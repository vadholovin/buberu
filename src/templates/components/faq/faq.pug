include faq.data.pug

section.section.section--bottom.faq
  .container
    h2.section__title Частые вопросы

    ul.accordion.accordion-with-icons
      each item, index in faq
        li.accordion__item
          .accordion__item-header
            h5.accordion__item-title
              span.accordion__item-count
              +icon( item.icon )
              button.collapse-trigger(
                data-toggle="collapse"
                data-target="#faq-" + (index + 1)
                aria-expanded=(index === 0) ? "true" : "false"
                aria-controls="faq-" + (index + 1)
              )= item.title
              +icon('close-o')

          .collapse(
            class=(index === 0) ? "show" : ""
            id="faq-" + (index + 1)
            data-parent="#accordion"
          )
            .accordion-body
              .accordion-body__left
                +icon( item.icon )

