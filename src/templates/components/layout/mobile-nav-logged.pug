include menus.data.pug

.mobile-nav.is-closed#mobile-nav
  .mobile-nav__overlay(data-close-nav)
  .mobile-nav__content
    .mobile-nav__inner
      .mobile-nav__header
        .mobile-nav__logo
          a.logo(href="")
            .logo__text Buberu
        .button-icon.button-close(data-close-nav)
          +icon("close-o")
      .mobile-nav__body
        .mobile-user-section
          .user-flag.mobile-nav__user-flag
            .user-flag__img
              .user-photo
                .user-photo__inner
                  img.user-photo__img(src="assets/img/content/avatars/ava-1.jpg", alt="")
            .user-flag__body
              span.user-flag__title Владимир Тихонов
              span.user-flag__subtitle Заказчик

          ul.user-menu.user-menu--mobile
            each item in userMenu
              li.user-menu__item
                a.user-menu__link(href="")
                  +icon( item.icon )
                  = item.title
                  if item.count
                    span.user-menu__counter= item.count

        ul.mobile-menu
          each item in mainMenu
            li
              a(href="")= item
