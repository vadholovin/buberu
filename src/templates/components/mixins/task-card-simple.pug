mixin task-card-simple(data, index)
  .task-card.task-card--simple&attributes(attributes)
    .task-card__content
      .task-card__info
        .task-card__heading
          a(href="")
            h5.task-card__title(title= `#${data.num} ${data.title}`)
              span.task-card__title-num= `#${data.num}`
              span.task-card__title-text= data.title
          span.task-card__label Подбор под ключ

        ul.task-card__meta
          li.task-card__meta-item
            a(href="")
              +icon('user-thin-o').task-card__meta-icon
              span.task-card__meta-text= data.name

          li.task-card__meta-item
            +icon('calendar-o').task-card__meta-icon
            span.task-card__meta-text.underline.underline--dashed.js-tippy-with-tpl(data-template="tippy-tpl-10" + index) осталось 2 дня
            +dates-tooltip(index)

          li.task-card__meta-item
            +icon('placeholder-o').task-card__meta-icon
            span.task-card__meta-text= data.address

      a.button-icon.task-card__link.task-card__link--icon(href="")
        +icon('arrow-rounded-o')
        span.hidden-visually Подробнее
