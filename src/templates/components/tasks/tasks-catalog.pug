include tasks.data.pug


.section.section--bottom.catalog
  .container
    h1.hidden-visually Каталог заданий
    .catalog__grid
      .catalog__col-main
        h2.section__title Найдено <span class="text-primary">1 795</span> заданий

        include ../filters/filters

        .tasks-catalog
          .filters-inline
            span.filters-inline__label Популярные категории:
            .filters-inline__row
              span.filters-inline__item.is-selected(tabindex="0" aria-selected="true" role="button") Единоразовый подбор
              span.filters-inline__item(tabindex="-1" aria-selected="false" role="button") Подбор под ключ
              span.filters-inline__item(tabindex="-1" aria-selected="false" role="button") Консультация

          .tasks-list.tasks-list--catalog
            each item in tasks
              .tasks-list__item
                .task-card.task-card--catalog
                  .task-card__icon
                    +icon( item.icon )
                  .task-card__content
                    .task-card__info
                      .task-card__heading
                        a(data-fancybox-notouch href='#modal-task-response')
                          h5.task-card__title(title="#1421 " + item.title)= item.title
                      .meta.meta--inline.task-card__meta
                        .meta-item
                          a(href="")
                            +icon('user-thin-o')
                            = item.name
                        .meta-item
                          +icon('calendar-o')
                          span.underline.underline--dashed осталось 2 дня
                        .meta-item
                          +icon('placeholder-o')
                          = item.address

                    a.button-icon.task-card__link.task-card__link--icon(data-fancybox-notouch href='#modal-task-response')
                      +icon('paper-plane')
                      span.hidden-visually Подробнее

            .tasks-list__item
              .promo.promo--lg
                img(src="assets/img/content/promo/promo-lg.png", alt="")

            each item in tasks
              .tasks-list__item
                .task-card.task-card--catalog
                  .task-card__icon
                    +icon( item.icon )
                  .task-card__content
                    .task-card__info
                      .task-card__heading
                        a(data-fancybox-notouch href='#modal-task-response')
                          h5.task-card__title(title="#1421 " + item.title)= item.title
                        span.task-card__label Подбор под ключ
                      .meta.meta--inline.task-card__meta
                        .meta-item
                          a(href="")
                            +icon('user-thin-o')
                            = item.name
                        .meta-item
                          +icon('calendar-o')
                          span.underline.underline--dashed осталось 2 дня
                        .meta-item
                          +icon('placeholder-o')
                          = item.address

                    a.button-icon.task-card__link.task-card__link--icon(data-fancybox-notouch href='#modal-task-response')
                      +icon('paper-plane')
                      span.hidden-visually Подробнее

          .tasks-catalog__footer
            span.tasks-catalog__footer-text Еще 1 230 непросмотренных заданий
            button.button.button--outline-secondary Показать еще

      .catalog__col-aside
        include ../iboxes/ibox-notif

        .promo.promo--sm
          img(src="assets/img/content/promo/promo-sm.png", alt="")
