include tasks.data.pug


.section.section--bottom
  .container
    h1.hidden-visually Каталог заданий
    .tasks__grid
      .tasks__col-main
        h2.section__title Найдено <span class="text-primary">1 795</span> заданий

        include tasks-filters

        .tasks-catalog
          ul.tasks-list.tasks-list--catalog
            each item in tasks
              li.tasks-list__item
                .task-card.task-card--simple
                  .task-card__icon
                    +icon( item.icon )
                  .task-card__content
                    .task-card__info
                      .task-card__heading
                        a(href="")
                          h5.task-card__title(title="#1421 " + item.title)
                            span.task-card__title-num #1421
                            span.task-card__title-text= item.title
                        span.task-card__label Подбор под ключ
                      ul.task-card__meta
                        li.task-card__meta-item
                          a(href="")
                            +icon('user-thin-o').task-card__meta-icon
                            span.task-card__meta-text= item.name
                        li.task-card__meta-item
                          +icon('calendar-o').task-card__meta-icon
                          span.task-card__meta-text.underline.underline--dashed осталось 2 дня
                        li.task-card__meta-item
                          +icon('placeholder-o').task-card__meta-icon
                          span.task-card__meta-text= item.address

                  a.button.button--light(href="")
                    +icon('arrow-rounded-o')
                    span.hidden-visually Подробнее

            li.tasks-list__promo
              .promo.promo--lg
                img(src="assets/img/content/promo/promo-lg.png", alt="")

            each item in tasks
              li.tasks-list__item
                .task-card
                  .task-card__icon
                    +icon( item.icon )
                  .task-card__content
                    .task-card__info
                      .task-card__heading
                        a(href="")
                          h5.task-card__title(title="#1421 " + item.title)
                            span.task-card__title-num #1421
                            span.task-card__title-text= item.title
                        span.task-card__label Подбор под ключ
                      ul.task-card__meta
                        li.task-card__meta-item
                          a(href="")
                            +icon('user-thin-o').task-card__meta-icon
                            span.task-card__meta-text= item.name
                        li.task-card__meta-item
                          +icon('calendar-o').task-card__meta-icon
                          span.task-card__meta-text.underline.underline--dashed осталось 2 дня
                        li.task-card__meta-item
                          +icon('placeholder-o').task-card__meta-icon
                          span.task-card__meta-text= item.address

          .tasks-catalog__footer
            span.tasks-catalog__footer-text Еще 1 230 непросмотренных заданий
            button.button.button--outline-secondary Показать еще

      .tasks__col-aside
        .tasks-aside
          include ../widgets/widget-notif

          .promo.promo--sm
            img(src="assets/img/content/promo/promo-sm.png", alt="")



