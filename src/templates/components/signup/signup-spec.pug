                    option(value="Автомеханик") Автомеханик
                    option(value="Автомеханик") Автомеханик

            +inputbox
              +label.inputbox__label--required(for="settings-name") Выберите ваше направление
              +input-wrapper
                .custom-select
                  select.js-filters-select(data-placeholder="Ваше направление")
                    option
                    option(value="Автомеханик") Автомеханик
                    option(value="Автомеханик") Автомеханик
                    option(value="Автомеханик") Автомеханик
